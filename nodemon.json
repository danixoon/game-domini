{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "client",
    "directives.gql"
  ],
  "events": {
    "restart": "kill-port 5000",
    "crash": "kill-port 5000"
  },
  "delay": "1500",
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts,gql,yml,graphql"
}
